<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlastiCode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bg_body">
        <item name="android:background">@color/white</item>
    </style>

    <!--Button Color-->
    <style name="btn_green_rounded" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@drawable/btn_green_rounded</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>

    <style name="ic_plasticode">
        <item name="android:drawable">@drawable/ic_plasticode</item>
    </style>
</resources>